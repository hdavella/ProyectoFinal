<div class="container" style="margin-top:100px;">
    <div class="row">
        <form action="/admin/trabajos/agregar" method="post" enctype="multipart/form-data">
            <div class="mb-3 row">

                <input type="text" class="form-control" placeholder="Titulo" name="titulo">

            </div>
            <div class="mb-3 row">

                <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo"></textarea>

            </div>
            <div class="mb-3 row">
                <label for="">Imagen: <input type="file" name="imagen" id="imagen" /> </label>
            </div>


            <div class="mb-3 row">

                <textarea type="text" class="form-control" placeholder="DescripciÃ³n" name="descripcion"></textarea>

            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <input type="button" value="Cancelar" onclick="location.href='/admin/trabajos'" class="btn btn-primary"/>
        </form>
        {{#if error}}
        <p>{{message}}</p>
        {{/if}}
    </div>
</div>